@using Kendo.Mvc.UI
@model AllMark.Models.RegisterViewModel

<h2>Регистрация</h2>

<form id="registerForm" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="Email">Введите Email</label><br />
            @Html.Kendo().TextBoxFor(i => i.Email)
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            @Html.Kendo().TextBoxFor(i => i.Password)
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            @Html.Kendo().TextBoxFor(i => i.ConfirmPassword)
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            @(Html.Kendo()
                .Button()
                .Name("btSubmit")
                .Content("Регистрация")
                .Events(e => e.Click("tbSubmit_onClick"))
                )
        </div>
    </div>
</form>
<script>
    function btSubmit_onClick() {
        $("#registerForm").submit();
    }
</script>
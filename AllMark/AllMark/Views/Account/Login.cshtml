@using Kendo.Mvc.UI
@model AllMark.Models.LoginViewModel

@{ 
    ViewData["Title"] = "Вход на сайт";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Register" asp-controller="Account">Регистрация</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="row" style="margin-bottom: 5px;">
            <label asp-for="Email" class="col-sm-3">Введите Email</label>
            <div class="col-sm-9">
                @Html.Kendo().TextBoxFor(i => i.Email).HtmlAttributes(new { style = "width: 100%;" })
                <span asp-validation-for="Email" class="col-sm-12 text-danger"></span>
            </div>
        </div>

        <div class="row" style="margin-bottom: 5px;">
            <label asp-for="Password" class="col-sm-3">Введите пароль</label><br />
            <div class="col-sm-9">
                @Html.Kendo().TextBoxFor(i => i.Password).HtmlAttributes(new { style = "width: 100%;" })
                <span asp-validation-for="Password" class="col-sm-12 text-danger"></span>
            </div>

        </div>
        <div class="form-group">
            @(Html.Kendo()
                .Button()
                .Name("btSubmit")
                .Content("Войти")
                .Events(e => e.Click("() => $('#registerForm').submit()"))
            )
        </div>
    </div>
</form>
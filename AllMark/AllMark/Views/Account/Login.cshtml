@using Kendo.Mvc.UI
@model AllMark.Models.Models.LoginViewModel

<h2>Вход на сайт</h2>

<a asp-action="Register" asp-controller="Account">Регистрация</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group col-lg-12">
            <label asp-for="Email" class="col-sm-3">Введите Email</label>
            <div class="col-sm-9">
                @(Html.Kendo().TextBoxFor(i => i.Email))
            </div>
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group col-lg-12">
            <label asp-for="Password" class="col-sm-3">Введите пароль</label>
            @(Html.Kendo().TextBoxFor(i => i.Password))
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn" />
        </div>
    </div>
</form>